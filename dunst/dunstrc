[global]
    font = "DejaVu Sans Mono Book" 8

    # allow a small subset of html markup:
    # <b>bold</b>
    # <i>italic</i>
    # <s>strikethrough<s/>
    # <u>underline</u>
    allow_markup = yes

    # The format of the message. Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    format = "%i %a: <b>%s</b>\n%b %p"
    sort = no
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 120
    word_wrap = yes
    ignore_newline = no
    geometry = "250x30-0+20"
    transparency = 15
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = 0
    padding = 2
    horizontal_padding = 4
    separator_color = frame
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[frame]
    width = 1
    color = "#1A1A1A"

[urgency_low]
    background = "#202020"
    foreground = "#888888"
    timeout = 10

[urgency_normal]
    background = "#1A1A1A"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#5B4961"
    foreground = "#ffffff"
    timeout = 10